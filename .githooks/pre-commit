#!/bin/sh
# Pre-commit hook for vibewatch
# Runs formatting and linting checks before allowing commits

set -e

echo "ğŸ” Running pre-commit checks..."

# Check if cargo is available
if ! command -v cargo &> /dev/null; then
    echo "âŒ Error: cargo not found. Please install Rust."
    exit 1
fi

# Run rustfmt check
echo "ğŸ“ Checking code formatting with rustfmt..."
if ! cargo fmt --check; then
    echo ""
    echo "âŒ Code formatting check failed!"
    echo "ğŸ’¡ Run 'cargo fmt' or 'just fmt' to fix formatting issues."
    exit 1
fi

# Run clippy
echo "ğŸ” Running clippy linter..."
if ! cargo clippy --all-targets --all-features -- -D warnings; then
    echo ""
    echo "âŒ Clippy linting failed!"
    echo "ğŸ’¡ Fix the warnings above or run 'cargo clippy --fix' to auto-fix."
    exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
if ! cargo test --quiet; then
    echo ""
    echo "âŒ Tests failed!"
    echo "ğŸ’¡ Fix failing tests before committing."
    exit 1
fi

echo ""
echo "âœ… All pre-commit checks passed!"
exit 0
