#!/bin/sh
# Pre-push hook for vibewatch
# Runs full test suite before pushing to remote

set -e

echo "ğŸš€ Running pre-push checks..."

# Check if cargo is available
if ! command -v cargo &> /dev/null; then
    echo "âŒ Error: cargo not found. Please install Rust."
    exit 1
fi

# Run full test suite
echo "ğŸ§ª Running full test suite..."
if ! cargo test; then
    echo ""
    echo "âŒ Test suite failed!"
    echo "ğŸ’¡ Fix failing tests before pushing."
    exit 1
fi

# Run clippy with all targets
echo "ğŸ” Running clippy on all targets..."
if ! cargo clippy --all-targets --all-features -- -D warnings; then
    echo ""
    echo "âŒ Clippy linting failed!"
    echo "ğŸ’¡ Fix the warnings above before pushing."
    exit 1
fi

echo ""
echo "âœ… All pre-push checks passed!"
exit 0
